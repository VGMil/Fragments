model Wallet {
    id      String  @id @default(uuid())
    balance Decimal @default(0.0) @db.Decimal(18, 8) // Soporte para cripto (8 decimales)

    userId     String
    currencyId Int // Ajustar tipo según id de Currency

    user     User     @relation(fields: [userId], references: [id])
    currency Currency @relation(fields: [currencyId], references: [id])

    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt

    // Esta línea asegura que un usuario solo tenga UNA wallet por moneda
    @@unique([userId, currencyId])
}
